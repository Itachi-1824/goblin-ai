# Include only what we need
include LICENSE
include README.md
include pyproject.toml

# Include compiled binaries
recursive-include goblin *.pyd
recursive-include goblin *.so

# Include minimal Python files (loader only)
include goblin/__init__.py
include goblin/__main__.py

# EXCLUDE source code - CRITICAL!
recursive-exclude goblin *.py
recursive-exclude goblin *.c
recursive-exclude goblin *.h
recursive-exclude goblin *.pyx
recursive-exclude goblin *.pyi

# Re-include the allowed .py files after exclusion
include goblin/__init__.py
include goblin/__main__.py

# Exclude build artifacts
recursive-exclude goblin __pycache__
recursive-exclude goblin *.pyc
recursive-exclude goblin *.pyo
recursive-exclude * __pycache__
recursive-exclude * *.egg-info
global-exclude *.py[cod]
global-exclude .git*
global-exclude .DS_Store
